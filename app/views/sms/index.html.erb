<h1>Send a Text</h1>

 <div class="row">
  <div class="span6 offset3">
    <%= form_tag send_sms_path do %>

<%= label_tag :number_to_send_to %>

      <%= text_field_tag :number_to_send_to, params[:number_to_send_to] %>
 

